
    <h2>{{name}}</h2>
    <div class="country-container">
        <ul>
            <li><span class="bold-text">Capital:</span> {{capital}}</li>
            <li><span class="bold-text">Population:</span> {{population}}</li>
            <li><span class="bold-text">Languages:</span>
                <ul>
                    {{#each languages}}
                    <li>{{name}}</li>
                    {{/each}}
                </ul>
            </li>
        </ul>
        <div class="flag">
            <img src="{{flag}}" alt="flag" width="150px" height="auto">
        </div>
    </div>